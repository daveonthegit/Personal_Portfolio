{
  "name": "personal-portfolio-frontend",
  "version": "1.0.0",
  "description": "Frontend TypeScript assets for Go-based personal portfolio",
  "scripts": {
    "build": "npm run build:ts && npm run build:css",
    "build:ts": "tsc && esbuild src/main.ts --bundle --outfile=static/js/main.js --minify --sourcemap",
    "build:css": "postcss src/styles/main.css -o static/css/main.css --map",
    "build:resume": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'scripts\\\\build-resume.bat' : 'bash scripts/build-resume.sh', {stdio: 'inherit'})\"",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:css\"",
    "watch:ts": "esbuild src/main.ts --bundle --outfile=static/js/main.js --watch --sourcemap",
    "watch:css": "postcss src/styles/main.css -o static/css/main.css --watch --map",
    "dev": "concurrently \"npm run watch\" \"go run main.go\"",
    "build:full": "npm run build:ts && npm run build:css && npm run build:resume",
    "type-check": "tsc --noEmit",
    "heroku-prebuild": "echo 'Installing dependencies...'",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "dependencies": {}
}
