# Environment Configuration for Developer Portfolio

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME="Developer Portfolio"

# Video Providers (choose one or both)
# Mux Configuration
NEXT_PUBLIC_MUX_TOKEN=your_mux_token_here

# Cloudflare Stream Configuration  
NEXT_PUBLIC_CF_ACCOUNT_ID=your_cloudflare_account_id

# Analytics (optional)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com
# Alternative: Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Content Management
# For on-demand revalidation
REVALIDATE_SECRET=your_secret_for_revalidation_api

# Database (if using dynamic content)
# DATABASE_URL=postgresql://username:password@localhost:5432/portfolio

# Email Configuration (if using contact form with backend)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_password

# Social Media (used in footer and about page)
NEXT_PUBLIC_GITHUB_USERNAME=yourusername
NEXT_PUBLIC_LINKEDIN_USERNAME=yourusername
NEXT_PUBLIC_EMAIL=your.email@example.com

# Feature Flags
NEXT_PUBLIC_ENABLE_3D_MODELS=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Development
NODE_ENV=development
ANALYZE=false
